<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PigTool.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Settings">
    <ContentPage.Content>
        <TableView
            Margin="0,20,0,0"
            HasUnevenRows="True"
            Intent="Settings">
            <TableRoot>
                <TableSection>
                    <TextCell
                        x:Name="UserProfile"
                        StyleId="disclosure"
                        Tapped="EditUser_Tapped"
                        Text="Change Profile Info" />
                    <TextCell
                        x:Name="UserLanguage"
                        Detail=""
                        StyleId="disclosure"
                        Tapped="ChangeLanguage_Tapped"
                        Text="Language" />
                    <TextCell
                        x:Name="Logout"
                        Detail=""
                        StyleId="disclosure"
                        Tapped="LogUserOut"
                        Text="Logout"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>