<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PigTool.Views.RegistrationPage"
             NavigationPage.HasNavigationBar="False"
             Title="{Binding RegistrationTitleTranslation}">
    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="RegistrationTitleLabel"
                       StyleClass="Title">
            </Label>
            <TableView Intent="Form" HasUnevenRows="True"  x:Name="RegistrationTableView">
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>