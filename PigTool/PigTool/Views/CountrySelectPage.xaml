<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PigTool.Views.CountrySelectPage"
             NavigationPage.HasNavigationBar="False"
             Title="{Binding CountrySelectTitleTranslation}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label x:Name="PageTitle"
                       StyleClass="Title">
            </Label>
            <TableView Intent="Form" HasUnevenRows="True"  x:Name="CountrySelectTableView">
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>